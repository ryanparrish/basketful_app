# =============================================================================
# Basketful Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your values
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Django Core Settings
# -----------------------------------------------------------------------------
DEBUG=False
SECRET_KEY=CHANGE_ME_generate_with_python_c_from_django_core_management_utils_import_get_random_secret_key_print_get_random_secret_key

# Comma-separated list of allowed hosts
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# CSRF trusted origins (full URLs with https://)
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# CORS allowed origins for API access
CORS_ALLOWED_ORIGINS=https://yourdomain.com

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# Format: postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=postgresql://basketful:CHANGE_ME_secure_password@db:5432/basketful

# PostgreSQL container settings
POSTGRES_DB=basketful
POSTGRES_USER=basketful
POSTGRES_PASSWORD=CHANGE_ME_secure_password

# -----------------------------------------------------------------------------
# Redis Configuration
# -----------------------------------------------------------------------------
REDIS_URL=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Security - Authentication Cookies
# -----------------------------------------------------------------------------
# Cookie domain - use leading dot for all subdomains
AUTH_COOKIE_DOMAIN=.yourdomain.com
AUTH_COOKIE_SECURE=True
AUTH_COOKIE_SAMESITE=Lax

# -----------------------------------------------------------------------------
# reCAPTCHA v2 Configuration
# Get keys from: https://www.google.com/recaptcha/admin
# -----------------------------------------------------------------------------
RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key

# -----------------------------------------------------------------------------
# Email Configuration (SMTP)
# -----------------------------------------------------------------------------
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=apikey
EMAIL_HOST_PASSWORD=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=Basketful <noreply@yourdomain.com>

# -----------------------------------------------------------------------------
# HashIDs Salt (for customer number generation)
# -----------------------------------------------------------------------------
HASHIDS_SALT=CHANGE_ME_random_salt_string

# -----------------------------------------------------------------------------
# Domain Name (for email links)
# -----------------------------------------------------------------------------
DOMAIN_NAME=yourdomain.com

# -----------------------------------------------------------------------------
# Celery Configuration
# -----------------------------------------------------------------------------
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# -----------------------------------------------------------------------------
# Sentry Error Tracking (Optional)
# -----------------------------------------------------------------------------
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# -----------------------------------------------------------------------------
# AWS S3 for Media Storage (Optional)
# -----------------------------------------------------------------------------
# USE_S3=True
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1
